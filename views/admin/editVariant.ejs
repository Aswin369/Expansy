     <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("addVariant");
            const quantityInput = document.getElementById("variant-quantity");
            const regularPriceInput = document.getElementById("variant-RegularPrice");
            const salePriceInput = document.getElementById("variant-SalePrice");
    
            // Prevent negative and 'e' in number inputs
            function validateNumberInput(event) {
                if (event.key === "e" || event.key === "-" || event.key === "+") {
                    event.preventDefault();
                }
            }
    
            quantityInput.addEventListener("keydown", validateNumberInput);
            regularPriceInput.addEventListener("keydown", validateNumberInput);
            salePriceInput.addEventListener("keydown", validateNumberInput);
    
            // Form Submit Handling
            form.addEventListener("submit", async function (event) {
                event.preventDefault(); // Prevent default form submission
    
                // Get values from form
                const ram = document.getElementById("variant-ram").value;
                const storage = document.getElementById("variant-storage").value;
                const color = document.getElementById("variant-color").value;
                const quantity = quantityInput.value.trim();
                const regularPrice = regularPriceInput.value.trim();
                const salePrice = salePriceInput.value.trim();
                const index = document.getElementById("index").value;
                const productId = document.getElementById("productId").value
                const specId = document.getElementById("specId").value
    
                // Convert to numbers for validation
                const regPrice = Number(regularPrice);
                const saleP = Number(salePrice);
    
                // Validation checks
                if (!quantity || regPrice <= 0 || saleP < 0) {
                    Swal.fire("Invalid Input", "Please enter valid numbers", "error");
                    return;
                }
    
                if (saleP > regPrice) {
                    Swal.fire("Error", "Sale price cannot be greater than regular price", "error");
                    return;
                }
    
                // Prepare data to send
                const formData = {
                    ram,
                    storage,
                    color,
                    quantity: Number(quantity),
                    regularPrice: regPrice,
                    salePrice: saleP,
                    index,
                    productId,
                    specId
                };
    

                console.log("lsdjfaskjdfj",formData)

                try {
                    const response = await fetch("/admin/editVariantStocks", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(formData)
                    });
    
                    const result = await response.json();
    
                    if (response.ok) {
                        Swal.fire("Success", result.message || "Variant updated successfully", "success")
                            .then(() => {
                                window.location.href = `/admin/editProduct/<%= product._id %>`;
                            });
                    } else {
                        Swal.fire("Error", result.message || "Something went wrong", "error");
                    }
                } catch (error) {
                    console.error("Error:", error);
                    Swal.fire("Error", "Server error. Please try again.", "error");
                }
            });
        });
    </script>
    
