<script>
     document.addEventListener("DOMContentLoaded", function() {
    // Date picker initialization
    flatpickr("#offer-start-date", {
        dateFormat: "d-m-Y",
        maxDate: "today"
    });

    flatpickr("#offer-end-date", {
        dateFormat: "d-m-Y",
        minDate: "today"
    });

    const form = document.getElementById("offer-form");
    const categoryRadio = document.getElementById("category-radio");
    const productRadio = document.getElementById("product-radio");
    const offerItemContainer = document.getElementById("offer-item-container");
    const offerItemSelect = document.getElementById("offer-item");

    const categoryOptions = `<% categoryData.forEach(category => { %>
        <option value="<%= category._id %>"><%= category.name %></option>
    <% }) %>`;

    const productOptions = `<% productData.forEach(product => { %>
        <option value="<%= product._id %>"><%= product.productName %></option>
    <% }) %>`;

    // Radio button event listeners
    categoryRadio.addEventListener("change", function() {
        if (categoryRadio.checked) {
            offerItemContainer.style.display = "block";
            offerItemSelect.innerHTML = '<option value="">Select a Category</option>' + categoryOptions;
        }
    });

    productRadio.addEventListener("change", function() {
        if (productRadio.checked) {
            offerItemContainer.style.display = "block";
            offerItemSelect.innerHTML = '<option value="">Select a Product</option>' + productOptions;
        }
    });

    // Validation functions
    function clearErrors() {
        const errorElements = document.querySelectorAll('.text-danger');
        errorElements.forEach(el => el.textContent = '');
    }

    function validateForm() {
        clearErrors();
        let isValid = true;

        // Start Date Validation
        const startDateInput = document.getElementById("offer-start-date");
        const startDateError = document.getElementById("start-date-error");
        if (!startDateInput.value) {
            startDateError.textContent = "Start date is required";
            isValid = false;
        }

        // End Date Validation
        const endDateInput = document.getElementById("offer-end-date");
        const endDateError = document.getElementById("end-date-error");
        if (!endDateInput.value) {
            endDateError.textContent = "End date is required";
            isValid = false;
        }

        // Date Range Validation
        if (startDateInput.value && endDateInput.value) {
            const startDate = flatpickr.parseDate(startDateInput.value, "d-m-Y");
            const endDate = flatpickr.parseDate(endDateInput.value, "d-m-Y");

            if (startDate > endDate) {
                endDateError.textContent = "End date must be later than start date";
                isValid = false;
            }
        }

        // Offer Name Validation
        const offerNameInput = document.getElementById("offer-name");
        const offerNameError = document.getElementById("offer-name-error");
        if (!offerNameInput.value.trim()) {
            offerNameError.textContent = "Offer name is required";
            isValid = false;
        }

        // Offer Type Validation
        const offerTypeError = document.getElementById("offer-type-error");
        if (!categoryRadio.checked && !productRadio.checked) {
            offerTypeError.textContent = "Please select an offer type";
            isValid = false;
        }

        // Offer Item Validation
        const offerItemError = document.getElementById("offer-item-error");
        if (offerItemContainer.style.display !== "none" && offerItemSelect.value === "") {
            offerItemError.textContent = "Please select a category or product";
            isValid = false;
        }

        // Discount Value Validation
        const discountValueInput = document.getElementById("discount-value");
        const discountValueError = document.getElementById("discount-value-error");
        const discountValue = parseFloat(discountValueInput.value);
        
        if (isNaN(discountValue) || discountValue <= 0 || discountValue > 90) {
            discountValueError.textContent = "Discount must be between 1% and 90%";
            isValid = false;
        }

        return isValid;
    }

    // Form Submission
    form.addEventListener("submit", function(e) {
        e.preventDefault();

        if (!validateForm()) {
            return;
        }

        // Prepare form data
        const formData = {
            start_date: document.getElementById("offer-start-date").value,
            end_date: document.getElementById("offer-end-date").value,
            offer_name: document.getElementById("offer-name").value,
            offer_type: categoryRadio.checked ? 'category' : 'product',
            offer_item: document.getElementById("offer-item").value,
            description: document.getElementById("offer-description").value,
            discount_value: document.getElementById("discount-value").value,
            offerId : document.getElementById("offerId").value
        };
        console.log("kdfsadf",formData)
        // Show loading alert
     //    Swal.fire({
     //        title: 'Creating Offer...',
     //        text: 'Please wait while we process your offer.',
     //        icon: 'info',
     //        showConfirmButton: false,
     //        allowOutsideClick: false
     //    });

        // Submit form using fetch
        fetch('/admin/editOffer', {
             method: 'POST',
             headers: {
                  'Content-Type': 'application/json'
               },
               body: JSON.stringify(formData)
          })
          
          .then(response => response.json())
          
          .then(data => {
             console.log("fsdggf",data)
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Offer created successfully.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    window.location.href = '/admin/getCreateOffer';
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message || 'Failed to create offer.',
                    icon: 'error',
                    confirmButtonText: 'Try Again'
                });
            }
        })
        .catch(error => {
            Swal.fire({
                title: 'Error!',
                text: 'An unexpected error occurred.',
                icon: 'error',
                confirmButtonText: 'Try Again'
            });
            console.error('Error:', error);
        });
    });
});
