function base64ToBlob(base64) {
    const parts = base64.split(';base64,');
    const contentType = parts[0].split(':')[1] || 'image/jpeg';
    const raw = window.atob(parts[1]);
    const rawLength = raw.length;
    const uInt8Array = new Uint8Array(rawLength);

    for (let i = 0; i < rawLength; ++i) {
        uInt8Array[i] = raw.charCodeAt(i);
    }

    return new Blob([uInt8Array], { type: contentType });
}

// Validate form fields
function validateForm() {
    const productName = document.getElementById('product-name').value.trim();
    const category = document.getElementById('product-categories').value;
    const brand = document.getElementById('brand').value;
    const quantity = document.getElementById('quantity').value;
    const regularPrice = document.getElementById('regular-price').value;
    const salePrice = document.getElementById('sale-price').value;
    const description = document.getElementById('description').value.trim();
    const ram = document.getElementById('ram').value;
    const storage = document.getElementById('storage').value;
    const processor = document.getElementById('processor').value.trim();
    const color = document.getElementById('color').value;

    // Validation checks with SweetAlert
    if (!productName) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Product name is required'
        });
        return false;
    }

    if (!category || category === "Select Category") {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please select a category'
        });
        return false;
    }

    if (!brand) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please select a brand'
        });
        return false;
    }

    if (!quantity || quantity <= 0) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Quantity must be greater than 0'
        });
        return false;
    }

    if (!regularPrice || regularPrice <= 0) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Regular price must be greater than 0'
        });
        return false;
    }

    if (salePrice && parseFloat(salePrice) >= parseFloat(regularPrice)) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Sale price must be less than regular price'
        });
        return false;
    }

    if (!description || description.length < 10) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Description must be at least 10 characters long'
        });
        return false;
    }

    return true;
}

// Handle form submission
async function handleFormSubmit(event) {
    event.preventDefault();

    if (!validateForm()) {
        return;
    }

    // Show loading state
    Swal.fire({
        title: 'Processing',
        text: 'Updating product...',
        allowOutsideClick: false,
        showConfirmButton: false,
        willOpen: () => {
            Swal.showLoading();
        }
    });

    try {
    // Save any active crops
    Object.keys(croppers).forEach(index => {
        saveCrop(index);
    });

    const form = event.target;
    const formData = new FormData(form);

    // Convert and append cropped images
    Object.entries(croppedImages).forEach(([index, base64Data]) => {
        if (base64Data) {
            const blob = base64ToBlob(base64Data);
            formData.append(`productImage-${index}`, blob, `image-${index}.jpg`);
        }
    });

    // Send the form data
    const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
    });

    if (!response.ok) {
        const errorResult = await response.json();
        console.error('Error:', errorResult);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: errorResult.message || 'Something went wrong!',
        });
        return; // Stop further processing if response is not OK
    }

    const result = await response.json();
    console.log(result); // Check the response structure

    // Show success message
    if (result && result.message) {
        await Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: result.message,
            timer: 2000,
            showConfirmButton: false
        });

        // Redirect to products list or reload page
        window.location.href = '/admin/products';
    } else {
        console.error("Message not found in the response.");
    }

} catch (error) {
    console.error('Error:', error);
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: error.message || 'Failed to update product. Please try again.',
    });
}

}

// Update your existing form event listener
document.querySelector('form').addEventListener('submit', handleFormSubmit);

// Update the validateAndSubmit function
function validateAndSubmit() {
    const form = document.querySelector('form');
    if (validateForm()) {
        form.dispatchEvent(new Event('submit'));
    }
}

