     <script>
            // Store cropper instances and images
let croppers = {};
let croppedImages = {};

// Handle file selection
function handleFileSelect(index) {
    const input = document.getElementById(`file-${index}`);
    const preview = document.getElementById(`preview-${index}`);
    
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            preview.src = e.target.result;
            
            // Destroy existing cropper if any
            if (croppers[index]) {
                croppers[index].destroy();
                delete croppers[index];
            }
            
            // Update button text back to "Crop"
            const cropBtn = document.getElementById(`crop-btn-${index}`);
            cropBtn.textContent = `Crop Image ${parseInt(index) + 1}`;
        };
        
        reader.readAsDataURL(input.files[0]);
    }
}

// Initialize cropping
function initCrop(index, event) {
    event.preventDefault(); // Prevent form submission
    const image = document.getElementById(`preview-${index}`);
    const cropBtn = document.getElementById(`crop-btn-${index}`);
    
    // If cropper exists, save the crop
    if (croppers[index]) {
        saveCrop(index);
        return;
    }
    
    // Initialize cropper
    croppers[index] = new Cropper(image, {
        aspectRatio: 1, // 1:1 aspect ratio for circle display
        viewMode: 1,
        guides: true,
        autoCropArea: 1,
        responsive: true,
        ready: function() {
            // Change button text to "Save"
            cropBtn.textContent = `Save Crop ${parseInt(index) + 1}`;
        }
    });
}

// Save cropped image
function saveCrop(index) {
    if (!croppers[index]) return;
    
    try {
        // Get cropped canvas
        const canvas = croppers[index].getCroppedCanvas({
            width: 600,  // Set desired output size
            height: 600,
            imageSmoothingQuality: 'high'
        });
        
        // Convert to base64
        const croppedData = canvas.toDataURL('image/jpeg', 0.9);
        
        // Store cropped data
        croppedImages[index] = croppedData;
        document.getElementById(`cropped-${index}`).value = croppedData;
        
        // Update preview
        const preview = document.getElementById(`preview-${index}`);
        preview.src = croppedData;
        
        // Reset button text and destroy cropper
        const cropBtn = document.getElementById(`crop-btn-${index}`);
        cropBtn.textContent = `Crop Image ${parseInt(index) + 1}`;
        
        croppers[index].destroy();
        delete croppers[index];
        
    } catch (error) {
        console.error('Error saving crop:', error);
        alert('Error saving cropped image. Please try again.');
    }
}

// Add necessary styles
const styles = `
    .image-preview-circle {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        overflow: hidden;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #ddd;
    }

    .preview-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .crop-btn {
        min-width: 200px;
        text-align: left;
    }

    .file-input-section {
        background: rgba(0, 0, 0, 0.03);
        padding: 20px;
        border-radius: 4px;
    }

    /* Cropper.js container styles */
    .cropper-container {
        margin: 0 auto;
    }
`;

// Add styles to document
const styleSheet = document.createElement("style");
styleSheet.textContent = styles;
document.head.appendChild(styleSheet);

// Handle form submission
function handleFormSubmit(event) {
    event.preventDefault();
    
    // Save any active crops
    Object.keys(croppers).forEach(index => {
        saveCrop(index);
    });
    
    // Create FormData
    const formData = new FormData(event.target);
    
    // Add cropped images to FormData
    Object.entries(croppedImages).forEach(([index, data]) => {
        formData.append(`croppedImage-${index}`, data);
    });
    
    // Submit form
    event.target.submit();


}

