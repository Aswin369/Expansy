     <script>
      document.addEventListener('DOMContentLoaded', function() {
    // Get references to the DOM elements
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    const filterBtn = document.getElementById('filterBtn');
    const downloadExcelBtn = document.getElementById('downloadExcel');
    const downloadPdfBtn = document.getElementById('downloadPdf');
    const oneDayBtn = document.getElementById('oneDayBtn');
    const oneWeekBtn = document.getElementById('oneWeekBtn');
    const oneMonthBtn = document.getElementById('oneMonthBtn');
    
    // Add event listener to the filter button
    filterBtn.addEventListener('click', function() {
        // Get the selected date values
        const startDate = startDateInput.value;
        const endDate = endDateInput.value;
        
        // Validate dates
        if (!startDate || !endDate) {
            Swal.fire({
                title: 'Error!',
                text: 'Please select both start and end dates',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        // Check if start date is before end date
        if (new Date(startDate) > new Date(endDate)) {
            Swal.fire({
                title: 'Error!',
                text: 'Start date cannot be after end date',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        // Prepare data to send to backend
        const filterData = {
            startDate: startDate,
            endDate: endDate,
            paymentStatus: ['paid', 'success'] // Only include successful payments
        };
        
        // Send data to backend using fetch API
        sendFilterToBackend(filterData);
    });
    
    // Add event listeners for time range buttons
    oneDayBtn.addEventListener('click', function() {
        setDateRange('today');
    });
    
    oneWeekBtn.addEventListener('click', function() {
        setDateRange('week');
    });
    
    oneMonthBtn.addEventListener('click', function() {
        setDateRange('month');
    });
    
    // Function to set date range based on button clicked
    function setDateRange(range) {
        const today = new Date();
        let startDate = new Date();
        
        // Calculate start date based on selected range
        switch(range) {
            case 'today':
                // Set start date to beginning of today
                startDate.setHours(0, 0, 0, 0);
                break;
            case 'week':
                // Set start date to 7 days ago
                startDate.setDate(today.getDate() - 7);
                break;
            case 'month':
                // Set start date to 30 days ago
                startDate.setDate(today.getDate() - 30);
                break;
        }
        
        // Format dates for input fields (YYYY-MM-DD)
        const formattedStartDate = startDate.toISOString().split('T')[0];
        const formattedEndDate = today.toISOString().split('T')[0];
        
        // Update input fields
        startDateInput.value = formattedStartDate;
        endDateInput.value = formattedEndDate;
        
        // Prepare filter data
        const filterData = {
            startDate: formattedStartDate,
            endDate: formattedEndDate,
            paymentStatus: ['paid', 'success'] // Include both paid and success statuses
        };
        
        // Apply the filter
        sendFilterToBackend(filterData);
    }
    
    // Function to send filter data to backend
    function sendFilterToBackend(filterData) {
        console.log('Sending filter data to backend:', filterData);
        
        // Show loading message
        Swal.fire({
            title: 'Filtering...',
            text: 'Please wait while we process your request',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        
        // Use the correct endpoint
        fetch('/admin/saleReportFilter', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(filterData)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Success:', data);
            
            // Check if the response was successful
            if (data.success) {
                // Close loading message and show success
                Swal.fire({
                    title: 'Success!',
                    text: 'Filter applied successfully',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
                
                // Update the UI with filtered data - pass orders array from response
                updateDataTable(data.orders);
            } else {
                throw new Error(data.message || 'Failed to get order data');
            }
        })
        .catch(error => {
            console.error('Error sending filter data:', error);
            Swal.fire({
                title: 'Error!',
                text: 'Error applying filter. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    }
    
    // Function to update the data table with filtered results
    function updateDataTable(orders) {
        const tableBody = document.querySelector('.table tbody');
        
        // Clear existing table rows
        tableBody.innerHTML = '';
        
        // Check if we have data to display
        if (!orders || orders.length === 0) {
            // Add a "no data" row
            const noDataRow = document.createElement('tr');
            noDataRow.innerHTML = `
                <td colspan="6" class="text-center">No orders found for the selected date range</td>
            `;
            tableBody.appendChild(noDataRow);
            return;
        }
        
        // Format date function
        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }
        
        // Get payment status badge
        function getPaymentStatusBadge(status) {
            let badgeClass = '';
            switch(status.toLowerCase()) {
                case 'paid':
                case 'success':
                    badgeClass = 'bg-success';
                    break;
                case 'pending':
                    badgeClass = 'bg-light text-dark';
                    break;
                case 'failed':
                    badgeClass = 'bg-danger';
                    break;
                default:
                    badgeClass = 'bg-light text-dark';
            }
            return `<span class="badge ${badgeClass} px-2 py-1 fs-13">${status.charAt(0).toUpperCase() + status.slice(1)}</span>`;
        }
        
        // Get order status badge
        function getOrderStatusBadge(status) {
            let badgeClass = '';
            switch(status.toLowerCase()) {
                case 'delivered':
                    badgeClass = 'border-success text-success';
                    break;
                case 'shipped':
                    badgeClass = 'border-info text-info';
                    break;
                case 'pending':
                case 'ordered':
                    badgeClass = 'border-warning text-warning';
                    break;
                case 'cancelled':
                    badgeClass = 'border-danger text-danger';
                    break;
                case 'return requested':
                    badgeClass = 'border-info text-info';
                    break;
                case 'return approved':
                    badgeClass = 'border-success text-success';
                    break;
                case 'return rejected':
                    badgeClass = 'border-danger text-danger';
                    break;
                default:
                    badgeClass = 'border-secondary text-secondary';
            }
            return `<span class="badge border ${badgeClass} px-2 py-1 fs-13">${status.charAt(0).toUpperCase() + status.slice(1)}</span>`;
        }
        
        // Loop through orders and add them to the table
        orders.forEach(order => {
            const row = document.createElement('tr');
            
            // Format the currency
            const formattedAmount = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'INR'
            }).format(order.payableAmount);
            
            row.innerHTML = `
                <td>${order.orderId}</td>
                <td><a href="#!" class="link-primary fw-medium">${order.userId ? order.userId.name : 'Unknown'}</a></td>
                <td>${formatDate(order.createdAt)}</td>
                <td>${formattedAmount}</td>
                <td>${getPaymentStatusBadge(order.paymentStatus)}</td>
                <td>${getOrderStatusBadge(order.status)}</td>
            `;
            
            tableBody.appendChild(row);
        });
    }
    
    // Event listener for Excel download button
    downloadExcelBtn.addEventListener('click', function() {
        downloadExcel();
    });
    
    // Event listener for PDF download button
    downloadPdfBtn.addEventListener('click', function() {
        downloadPdf();
    });
    
    // Function to handle Excel download with current filter params
    function downloadExcel() {
        const startDate = startDateInput.value;
        const endDate = endDateInput.value;
        
        // Validate dates for download
        if (!startDate || !endDate) {
            Swal.fire({
                title: 'Error!',
                text: 'Please select both start and end dates before exporting',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        // Build query parameters
        let queryParams = `?startDate=${startDate}&endDate=${endDate}&paymentStatus=paid,success`;
        
        // Show loading message
        Swal.fire({
            title: 'Generating Excel...',
            text: 'Please wait while we prepare your download',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        
        // Redirect to download endpoint
        window.location.href = `/admin/saleReportExcel${queryParams}`;
        
        // Close the loading dialog after a short delay
        setTimeout(() => {
            Swal.close();
        }, 2000);
    }
    
    // Function to handle PDF download with current filter params
    function downloadPdf() {
        const startDate = startDateInput.value;
        const endDate = endDateInput.value;
        
        // Validate dates for download
        if (!startDate || !endDate) {
            Swal.fire({
                title: 'Error!',
                text: 'Please select both start and end dates before exporting',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        // Build query parameters
        let queryParams = `?startDate=${startDate}&endDate=${endDate}&paymentStatus=paid,success`;
        
        // Show loading message
        Swal.fire({
            title: 'Generating PDF...',
            text: 'Please wait while we prepare your download',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        
        // Redirect to download endpoint
        window.location.href = `/admin/saleReportPdf${queryParams}`;
        
        // Close the loading dialog after a short delay
        setTimeout(() => {
            Swal.close();
        }, 2000);
    }
});
