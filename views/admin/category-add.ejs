document.addEventListener("DOMContentLoaded", function () {
     // Properly get the form and attach the event handler
     const form = document.querySelector("form");
     if (form) {
          // Remove the inline onsubmit to avoid conflicts
          form.removeAttribute("onsubmit");
          form.addEventListener("submit", handleFormSubmit);
     }

     const imageInput = document.getElementById("imageInput");
     const imagePreview = document.getElementById("imagePreview");
     const cropContainer = document.getElementById("cropContainer");
     const cropButton = document.getElementById("cropButton");
     const croppedImageData = document.getElementById("croppedImageData");

     // Add a container for showing the final cropped image preview
     const previewContainer = document.createElement("div");
     previewContainer.id = "croppedPreviewContainer";
     previewContainer.style.display = "none";
     previewContainer.innerHTML = `
          <h5 class="mt-3">Cropped Image Preview:</h5>
          <img id="finalCroppedPreview" style="max-width: 150px; max-height: 150px; border: 1px solid #ddd; border-radius: 4px; padding: 5px;" />
     `;
     cropContainer.after(previewContainer);

     let cropper = null;

     // Handle image selection
     imageInput.addEventListener("change", function (event) {
          const file = event.target.files[0];
          if (!file) return;

          // Reset the cropped file when a new image is selected
          window.croppedFile = null;
          document.getElementById("croppedPreviewContainer").style.display = "none";

          // Read the selected image and show it for cropping
          const reader = new FileReader();
          reader.onload = function (e) {
               // Set the image source
               imagePreview.src = e.target.result;
               
               // Display the crop container
               cropContainer.style.display = "block";
               
               // Destroy existing cropper if any
               if (cropper) {
                    cropper.destroy();
               }
               
               // Initialize the Cropper after a short delay to ensure image is loaded
               setTimeout(() => {
                    try {
                         cropper = new Cropper(imagePreview, {
                              aspectRatio: 1,
                              viewMode: 2,
                              scalable: true,
                              zoomable: true,
                              responsive: true,
                              background: false,
                              autoCropArea: 0.8,
                         });
                    } catch (err) {
                         console.error("Cropper initialization error:", err);
                         Swal.fire({
                              icon: "error",
                              title: "Cropper Error",
                              text: "Could not initialize the image cropper. Please ensure Cropper.js is properly loaded.",
                         });
                    }
               }, 200);
          };
          reader.readAsDataURL(file);
     });

     // Handle crop button click
     cropButton.addEventListener("click", function () {
          if (!cropper) {
               Swal.fire({
                    icon: "error",
                    title: "Oops",
                    text: "Please select an image first",
               });
               return;
          }

          try {
               // Get the cropped canvas
               const canvas = cropper.getCroppedCanvas({
                    width: 300,
                    height: 300,
                    fillColor: '#fff',
                    imageSmoothingEnabled: true,
                    imageSmoothingQuality: 'high',
               });

               if (!canvas) {
                    throw new Error("Could not crop the image");
               }

               // Convert the canvas to blob
               canvas.toBlob(function (blob) {
                    // Create a new File object
                    const file = new File([blob], "cropped-image.jpg", { type: "image/jpeg" });
                    
                    // Store the cropped file for form submission
                    window.croppedFile = file;
                    
                    // Also set the hidden input value for fallback
                    if (croppedImageData) {
                         croppedImageData.value = canvas.toDataURL("image/jpeg");
                    }
                    
                    // Show preview of the cropped image
                    const finalPreview = document.getElementById("finalCroppedPreview");
                    finalPreview.src = URL.createObjectURL(blob);
                    document.getElementById("croppedPreviewContainer").style.display = "block";
                    
                    // Hide the crop container
                    cropContainer.style.display = "none";

                    // Show success message
                    Swal.fire({
                         icon: "success",
                         title: "Success!",
                         text: "Image cropped successfully!",
                    });
               }, "image/jpeg", 0.9);
          } catch (err) {
               console.error("Cropping error:", err);
               Swal.fire({
                    icon: "error",
                    title: "Cropping Failed",
                    text: "Failed to crop the image. Please try again.",
               });
          }
     });
});
