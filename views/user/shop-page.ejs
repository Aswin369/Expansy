<script>
	document.addEventListener('DOMContentLoaded', function() {


		const clearFilterButton = document.querySelector('.zmdi-close-circle').parentElement;
if (clearFilterButton) {
    clearFilterButton.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Get the base URL without query parameters
        const url = new URL(window.location.href);
        url.search = ''; // Remove all query parameters
        
        // Reset page to 1 (though this would happen anyway with a blank search)
        url.searchParams.set('page', '1');
        
        // Navigate to the cleaned URL
        window.location.href = url.toString();
        
        // Clear the search input if it exists
        const searchInput = document.querySelector('input[name="search-product"]');
        if (searchInput) {
            searchInput.value = '';
        }
    });
}

    // Utility function to update URL parameters without losing others
    function updateUrlWithFilters(params) {
        const url = new URL(window.location.href);
        const urlParams = new URLSearchParams(url.search);
        
        // Update or add each parameter
        for (const key in params) {
            if (params[key] === 'All' || params[key] === '') {
                urlParams.delete(key); // Remove parameter if it's "All" or empty
            } else {
                urlParams.set(key, params[key]);
            }
        }
        
        // Reset to page 1 when applying new filters
        urlParams.set('page', '1');
        
        // Build and return new URL
        url.search = urlParams.toString();
        return url.toString();
    }
    
    // ------ BRAND FILTER ------
    const filterButtons = document.querySelectorAll('.filter-btn');
    filterButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const brand = this.getAttribute('data-brand');
            
            // If "All Products" is clicked, remove brand filter
            if (brand === 'All') {
                const url = new URL(window.location.href);
                const urlParams = new URLSearchParams(url.search);
                urlParams.delete('brand');
                url.search = urlParams.toString();
                window.location.href = url.toString();
                return;
            }
            
            // For specific brand, set the brand parameter
            window.location.href = updateUrlWithFilters({ brand });
        });
    });
    
    // ------ PRICE RANGE FILTER ------
    const priceLinks = document.querySelectorAll('.filter-col2 a');
    priceLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const priceText = this.textContent.trim();
            let price;
            
            if (priceText === 'All') {
                price = '';
            } else {
                price = priceText;
            }
            
            window.location.href = updateUrlWithFilters({ price });
        });
    });
    
    // ------ CATEGORY FILTER ------
    const categoryLinks = document.querySelectorAll('.filter-col3 a');
    categoryLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const category = this.textContent.trim();
            
            if (category === 'All') {
                window.location.href = updateUrlWithFilters({ category: '' });
            } else {
                window.location.href = updateUrlWithFilters({ category });
            }
        });
    });
    
    // ------ SORT LINKS ------
    document.getElementById('a-z')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = updateUrlWithFilters({ sort: 'a-z' });
    });
    
    document.getElementById('z-a')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = updateUrlWithFilters({ sort: 'z-a' });
    });
    
    document.getElementById('newArrivals')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = updateUrlWithFilters({ sort: 'new' });
    });
    
    // Add High-Low price sorting
    document.getElementById('High-Low')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = updateUrlWithFilters({ sort: 'high-low' });
    });
    
    // Add Low-High price sorting
    document.getElementById('Low-High')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = updateUrlWithFilters({ sort: 'low-high' });
    });
    
    // ------ SEARCH WITH DEBOUNCING ------
    const searchInput = document.querySelector('input[name="search-product"]');
    let debounceTimer;
    
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            // Clear previous timer
            clearTimeout(debounceTimer);
            
            // Set new timer
            debounceTimer = setTimeout(() => {
                const searchValue = this.value.trim();
                window.location.href = updateUrlWithFilters({ search: searchValue });
            }, 500); // 500ms debounce delay
        });
    }
    
    // ------ UPDATE PAGINATION LINKS TO PRESERVE FILTERS ------
    function updatePaginationLinks() {
        const paginationLinks = document.querySelectorAll('.pagination .page-link');
        const url = new URL(window.location.href);
        const urlParams = new URLSearchParams(url.search);
        
        paginationLinks.forEach(link => {
            // Skip if this is a span (disabled pagination)
            if (!link.getAttribute('href')) return;
            
            // Extract the page number from the href
            const hrefMatch = link.getAttribute('href').match(/page=(\d+)/);
            if (hrefMatch) {
                const pageNum = hrefMatch[1];
                
                // Create a copy of current params
                const newParams = new URLSearchParams(urlParams.toString());
                newParams.set('page', pageNum);
                
                // Update the href
                link.setAttribute('href', `?${newParams.toString()}`);
            }
        });
    }
    
    // Call on page load
    updatePaginationLinks();
    
    // ------ HIGHLIGHT ACTIVE FILTERS ------
    function highlightActiveFilters() {
        // Get active filters from URL parameters
        const url = new URL(window.location.href);
        const params = new URLSearchParams(url.search);
        
        // Try to get from activeFilters element if available
        const activeFiltersElement = document.getElementById('activeFilters');
        let activeFilters = {
            brand: params.get('brand') || 'All',
            price: params.get('price') || '',
            category: params.get('category') || '',
            sort: params.get('sort') || '',
            search: params.get('search') || ''
        };
        
        if (activeFiltersElement) {
            try {
                // Try to parse from data-filters attribute first
                const dataFilters = activeFiltersElement.getAttribute('data-filters');
                if (dataFilters) {
                    activeFilters = JSON.parse(dataFilters);
                } else {
                    // Fallback to textContent
                    activeFilters = JSON.parse(activeFiltersElement.textContent);
                }
            } catch (e) {
                console.error('Error parsing active filters:', e);
                // Keep using the URL params as fallback
            }
        }
        
        // Highlight active brand button
        filterButtons.forEach(button => {
            const buttonBrand = button.getAttribute('data-brand');
            if (buttonBrand === activeFilters.brand) {
                button.classList.add('how-active1');
            } else {
                button.classList.remove('how-active1');
            }
        });
        
        // Highlight active sort option
        const sortElements = {
            'a-z': document.getElementById('a-z'),
            'z-a': document.getElementById('z-a'),
            'new': document.getElementById('newArrivals'),
            'high-low': document.getElementById('High-Low'),
            'low-high': document.getElementById('Low-High')
        };
        
        for (const [sortValue, element] of Object.entries(sortElements)) {
            if (element) {
                element.style.color = (activeFilters.sort === sortValue) ? '#6c7ae0' : '#aaaaaa';
            }
        }
        
        // Default highlight for newArrivals if no sort specified
        if (!activeFilters.sort && sortElements['new']) {
            sortElements['new'].style.color = '#6c7ae0';
        }
        
        // Highlight active price filter
        priceLinks.forEach(link => {
            const priceText = link.textContent.trim();
            if ((priceText === 'All' && !activeFilters.price) || priceText === activeFilters.price) {
                link.style.color = '#6c7ae0';
            } else {
                link.style.color = '#aaaaaa';
            }
        });
        
        // Highlight active category filter
        categoryLinks.forEach(link => {
            const categoryText = link.textContent.trim();
            if ((categoryText === 'All' && !activeFilters.category) || categoryText === activeFilters.category) {
                link.style.color = '#6c7ae0';
            } else {
                link.style.color = '#aaaaaa';
            }
        });
        
        // Set search input value if there's a search query
        if (activeFilters.search && searchInput) {
            searchInput.value = activeFilters.search;
        }
    }
    
    // Call on page load
    highlightActiveFilters();
});
</script>

