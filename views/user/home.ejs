	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script>
		// Add event listeners when the document is loaded
		document.addEventListener('DOMContentLoaded', function() {
			// Get all product containers
			const productContainers = document.querySelectorAll('.block2');
	
			productContainers.forEach(container => {
				// Get the product ID from the detail link
				const productDetailLink = container.querySelector('.js-name-b2');
				if (!productDetailLink) {
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Product detail link not found'
					});
					return;
				}
	
				const productId = productDetailLink.href.split('/').pop();
				if (!productId) {
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Could not extract product ID'
					});
					return;
				}
	
				// Add click handler to product image
				const productImage = container.querySelector('.block2-pic img');
				if (productImage) {
					productImage.style.cursor = 'pointer';
					productImage.addEventListener('click', () => handleProductClick(productId));
				}
	
				// Add click handler to product name
				productDetailLink.addEventListener('click', function(e) {
					e.preventDefault();
					handleProductClick(productId);
				});
			});
	
			async function handleProductClick(productId) {
    try {
        // Show loading state
        Swal.fire({
            title: 'Loading...',
            text: 'Please wait while we process your request',
            allowOutsideClick: false,
            allowEscapeKey: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Simply redirect to the product detail page
        window.location.href = `/productDetailPage/${productId}`;
    } catch (error) {
        // Handle error
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong'
        });
        console.error(error);
    }
}

		});
	</script>

	<script>
		 document.addEventListener("DOMContentLoaded", function () {
  const wishlistButtons = document.querySelectorAll(".btn-addwish-b2");

  wishlistButtons.forEach((wishlistBtn) => {
    wishlistBtn.addEventListener("click", async function (event) {
      event.preventDefault(); // Prevent default anchor behavior

      const productId = this.getAttribute("data-product-id");

      if (!productId) {
        console.error("Error: Product ID not found!");
        return;
      }

      console.log("Product ID:", productId); // Debugging

      try {
        const response = await fetch("/addtowishlist", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productId }),
        });

        if (response.ok) {
          const data = await response.json();

          // Show success message
          Swal.fire({
            icon: "success",
            title: "Success",
            text: "Product added to wishlist successfully",
            timer: 1500,
            showConfirmButton: false,
          });

          // Change the heart icon to indicate it's in the wishlist
          this.querySelector(".icon-heart1").style.display = "none";
          this.querySelector(".icon-heart2").style.display = "block";
        } else {
          if (response.status === 401) {
            // If user is not logged in, redirect to login page
            window.location.href = "/login";
            return;
          }

          const data = await response.json();
          throw new Error(data.message || "Failed to add product to wishlist");
        }
      } catch (error) {
        console.error("Error:", error);
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: error.message || "Something went wrong! Please try again.",
        });
      }
    });
  });
});

	</script>
	

