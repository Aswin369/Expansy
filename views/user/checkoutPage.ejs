	<script>
	document.addEventListener('DOMContentLoaded', function() {
    // Initialize variables
    let cartItems = [];
    let subtotal = 0;
    let discount = 0.00; // Fixed discount amount from your HTML
    let totalAmount = 0;
    
    // Get DOM elements
    const subtotalElement = document.querySelector('.flex-w.flex-t.bor12.p-b-13 .size-209 .mtext-110');
    const totalElement = document.querySelector('.flex-w.flex-t.p-t-27.p-b-33 .size-209 .mtext-110');
    const placeOrderButton = document.querySelector('button.flex-c-m.stext-101.cl0.size-116');
    
    // Function to calculate totals
    function calculateTotals() {
        // Get all cart items
        const itemRows = document.querySelectorAll('.table_row');
        subtotal = 0;
        cartItems = [];
        
        itemRows.forEach(row => {
            // Get the hidden product ID field
            const productIdInput = row.querySelector('input[type="hidden"]');
            if (!productIdInput) {
                console.error('Product ID input not found for a cart item');
                return; // Skip this item
            }
            const productId = productIdInput.value;
            
            const quantityElement = row.querySelector('.column-3');
            const priceElement = row.querySelector('.column-4');
            const totalPriceElement = row.querySelector('.column-5');
            
            if (!quantityElement || !priceElement || !totalPriceElement) {
                console.error('Required element missing for cart item');
                return; // Skip this item
            }
            
            const quantity = parseInt(quantityElement.textContent);
            const unitPrice = parseFloat(priceElement.textContent.replace('$', '').trim());
            const totalPrice = parseFloat(totalPriceElement.textContent.replace('$', '').trim());
            
            subtotal += totalPrice;
            
            // Store item data for submission
            const productNameElement = row.querySelector('.column-2');
            const productName = productNameElement ? productNameElement.textContent.trim() : 'Unknown Product';
            
            cartItems.push({
                productId,
                productName,
                quantity,
                price: unitPrice,
                totalPrice
            });
        });
        
        // Calculate total after discount
        totalAmount = subtotal - discount;
        
        // Update DOM elements
        if (subtotalElement) {
            subtotalElement.textContent = `$${subtotal.toFixed(2)}`;
        }
        if (totalElement) {
            totalElement.textContent = `$${totalAmount.toFixed(2)}`;
        }
    }
    
    // Initialize totals on page load
    calculateTotals();
    
    // Utility function for showing alert
    function showAlert(title, text, icon, buttonText) {
        return Swal.fire({
            title: title,
            text: text,
            icon: icon,
            confirmButtonText: buttonText || 'OK'
        });
    }
    
    // Handle coupon application
    const couponInput = document.querySelector('input[name="coupon"]');
    const applyCouponButton = document.querySelector('.flex-c-m.stext-101.cl2.size-118');
    
    if (applyCouponButton && couponInput) {
        applyCouponButton.addEventListener('click', function() {
            const couponCode = couponInput.value.trim();
            if (couponCode) {
                // You could implement coupon validation logic here
                // For now, we'll just show an alert
                fetch('/applyCoupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ couponCode })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        discount = data.discountAmount || 0;
                        showAlert(
                            "Coupon Applied!",
                            `Coupon "${couponCode}" has been applied.`,
                            "success",
                            "Continue"
                        );
                        calculateTotals();
                    } else {
                        showAlert(
                            "Invalid Coupon",
                            data.message || "The coupon code is invalid or expired.",
                            "warning"
                        );
                    }
                })
                .catch(error => {
                    console.error('Error applying coupon:', error);
                    showAlert(
                        "Error",
                        "There was an error applying the coupon. Please try again.",
                        "error"
                    );
                });
            } else {
                showAlert(
                    "Empty Coupon",
                    "Please enter a coupon code.",
                    "warning"
                );
            }
        });
    }
    
    // Add new address functionality
    // const addAddressButton = document.querySelector('.flex-c-m.stext-101.cl2.size-115');
    // if (addAddressButton) {
    //     addAddressButton.addEventListener('click', function() {
    //         // Redirect to address page or show modal
    //         Swal.fire({
    //             title: "Add New Address",
    //             text: "You'll be redirected to add a new address.",
    //             icon: "info",
    //             showCancelButton: true,
    //             confirmButtonText: "Continue",
    //             cancelButtonText: "Cancel"
    //         }).then((result) => {
    //             if (result.isConfirmed) {
    //                 window.location.href = "/profilePage?showAddAddress=true";
    //             }
    //         });
    //     });
    // }
    
    // Form submission
    if (placeOrderButton) {
        placeOrderButton.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Check if cart is empty
            if (cartItems.length === 0) {
                showAlert(
                    "Empty Cart",
                    "Your cart is empty. Please add items to your cart before placing an order.",
                    "warning"
                );
                return;
            }
            
            // Get selected address
            const selectedAddress = document.querySelector('input[name="address"]:checked');
            if (!selectedAddress) {
                showAlert(
                    "Address Required",
                    "Please select a delivery address.",
                    "error"
                );
                return;
            }
            
            // Get selected payment method
            const paymentMethodRadio = document.querySelector('input[name="payment"]:checked');
            if (!paymentMethodRadio) {
                showAlert(
                    "Payment Required",
                    "Please select a payment method.",
                    "error"
                );
                return;
            }
            
            const paymentMethod = paymentMethodRadio.id === 'payment1' ? 'cod' : 'ONLINE';
            
            // Validate payment method
            if (paymentMethod !== 'cod') {
                showAlert(
                    "Payment Method",
                    "Currently only Cash on Delivery is available.",
                    "warning"
                );
                return;
            }
            
            // Prepare data for submission
            const orderData = {
                deliveryAddressId: selectedAddress.value,
                totalAmount: subtotal,
                payableAmount: totalAmount,
                paymentMethod: paymentMethod,
                items: cartItems
            };
            
            // Submit order
            fetch('/placeOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(orderData)
            })
            .then(response => {
                if (!response.ok) {
                    return response.json().then(data => {
                        throw new Error(data.message || 'Network response was not ok');
                    });
                }
                return response.json();
            })
            .then(data => {
                Swal.fire({
                    title: "Order Placed Successfully!",
                    text: `Your order ID is ${data.orderId}. Thank you for shopping with us!`,
                    icon: "success",
                    confirmButtonText: "Continue"
                }).then(() => {
                    window.location.href = "/ordersuccess";
                });
            })
            .catch(error => {
                showAlert(
                    "Error",
                    error.message || "There was an error placing your order. Please try again.",
                    "error"
                );
                console.error('Error:', error);
            });
        });
    }
    
    // Quantity change event listeners
    const updateQuantityButtons = document.querySelectorAll('.update-qty-btn');
    if (updateQuantityButtons.length > 0) {
        updateQuantityButtons.forEach(button => {
            button.addEventListener('click', function() {
                const row = this.closest('.table_row');
                const productId = row.querySelector('input[type="hidden"]').value;
                const quantityElement = row.querySelector('.column-3');
                const quantity = parseInt(quantityElement.textContent);
                
                // Update quantity on server
                fetch('/updateCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId, quantity })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to update quantity');
                    }
                    return response.json();
                })
                .then(data => {
                    // Update UI with new values
                    const priceElement = row.querySelector('.column-4');
                    const totalPriceElement = row.querySelector('.column-5');
                    const unitPrice = parseFloat(priceElement.textContent.replace('$', '').trim());
                    
                    totalPriceElement.textContent = `$${(unitPrice * quantity).toFixed(2)}`;
                    
                    // Recalculate cart totals
                    calculateTotals();
                })
                .catch(error => {
                    console.error('Error updating quantity:', error);
                    showAlert(
                        "Error",
                        "Failed to update quantity. Please try again.",
                        "error"
                    );
                });
            });
        });
    }
});
