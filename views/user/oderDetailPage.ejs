										<h3 class="fs-15 fw-bold"><%= product.productId.productName %></h3>
										<div class="badge bg-success"><%= product.status %></div>
									</div>
									
									
									<div class="col-md-4">
										<p class="mb-1">Quantity: <%= product.quantity %></p>
										<p class="mb-1">Unit Price: ₹<%= product.price.toLocaleString() %></p>
										<p class="fw-bold">Total Price: ₹<%= product.totalPrice.toLocaleString() %></p>
									</div>
									<div class="col-md-2 text-end d-flex flex-column align-items-end gap-2">
										<button 
										  class="cancel-btn btn btn-danger w-100"
										  onclick="cancelOrder(
											'<%= product.productId._id %>', 
											'<%= orderData._id %>', 
											'<%= product.specId %>', 
											'<%= product.quantity %>', 
											'<%= product._id %>', 
											'<%= product.totalPrice %>', 
											'<%= orderData.userId %>'
										  )" 
										  <%= product.status === "Cancelled" || product.status === "Return Requested" ? "disabled" : "" || product.status === "Return Approved" ? "disabled" : "" || orderData.status === "Delivered" ? "disabled" : "" || orderData.status === "Cancelled" ? "disabled" : ""%>
										>
										  Cancel
										</button>
									  
										<% if (orderData.status === "Delivered") { %>
										  <button 
											class="return-btn btn btn-success w-100"
											onclick="returnRequest(
											  '<%= product.productId._id %>', 
											  '<%= orderData._id %>', 
											  '<%= product.specId %>', 
											  '<%= product.quantity %>', 
											  '<%= product._id %>', 
											  '<%= product.totalPrice %>', 
											  '<%= orderData.userId %>'
											)"
											<%= product.status === "Cancelled" || product.status === "Return Requested" ? "disabled" : "" || product.status === "Return Approved" ? "disabled" : "" %>
										  >
											Return Request
										  </button>
										<% } %>
									  </div>
									
								</div>
							</div>
						<% }) %>
						
                        
                       
    
