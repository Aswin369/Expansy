<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .animation-ctn {
            text-align: center;
            height: 100px;
            margin-bottom: 20px;
        }

        @keyframes checkmark {
            0% { stroke-dashoffset: 100px }
            100% { stroke-dashoffset: 0px }
        }

        @keyframes checkmark-circle {
            0% { stroke-dashoffset: 480px }
            100% { stroke-dashoffset: 960px }
        }

        @keyframes colored-circle { 
            0% { opacity: 0 }
            100% { opacity: 1 }
        }

        .icon--order-success svg polyline {
            animation: checkmark 0.25s ease-in-out 0.7s backwards;
        }

        .icon--order-success svg circle {
            animation: checkmark-circle 0.6s ease-in-out backwards;
        }
        
        .icon--order-success svg circle#colored {
            animation: colored-circle 0.6s ease-in-out 0.7s backwards;
        }

        ._success {
            box-shadow: 0 15px 25px #00000019;
            padding: 45px;
            width: 100%;
            text-align: center;
            margin: 40px auto;
            border-bottom: solid 4px #28a745;
        }

        ._success h2 {
            margin-bottom: 12px;
            font-size: 40px;
            font-weight: 500;
            line-height: 1.2;
            margin-top: 10px;
        }

        ._success p {
            margin-bottom: 0px;
            font-size: 18px;
            color: #495057;
            font-weight: 500;
        }

        ._failed { 
            border-bottom: solid 4px red !important; 
        }
        
        /* Hide the original FontAwesome icons */
        ._success i.fa {
            display: none;
        }
        
        /* Order ID box styling */
        .order-id-box {
            background: #f8f9fa;
            border: 1px dashed #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin: 25px 0;
            display: inline-block;
        }
        
        .order-id-box .label {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 5px;
            display: block;
        }
        
        .order-id-box .value {
            font-size: 20px;
            font-weight: 600;
            color: #212529;
            letter-spacing: 1px;
        }
        
        /* Home button styling */
        .home-btn {
            display: inline-block;
            margin-top: 25px;
            padding: 12px 30px;
            background: linear-gradient(to right, #28a745, #20c997);
            color: white;
            font-weight: 500;
            font-size: 16px;
            border: none;
            border-radius: 30px;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .home-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            color: white;
        }
        
        .failed-home-btn {
            background: linear-gradient(to right, #dc3545, #e83e8c);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
        }
        
        .failed-home-btn:hover {
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="message-box _success" id="success-message">
                    <i class="fa fa-check-circle" aria-hidden="true"></i>
                    <!-- Insert SVG Animation -->
                    <div class="animation-ctn">
                        <div class="icon icon--order-success svg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100px" height="100px">  
                                <g fill="none" stroke="#22AE73" stroke-width="2"> 
                                    <circle cx="50" cy="50" r="45" style="stroke-dasharray:480px, 480px; stroke-dashoffset: 960px;"></circle>
                                    <circle id="colored" fill="#22AE73" cx="50" cy="50" r="45" style="stroke-dasharray:480px, 480px; stroke-dashoffset: 960px;"></circle>
                                    <polyline class="st0" stroke="#fff" stroke-width="8" points="28,50 42,65 72,35" style="stroke-dasharray:100px, 100px; stroke-dashoffset: 200px;"/>   
                                </g> 
                            </svg>
                        </div>
                    </div>
                    <h2>Your payment was successful</h2>
                    <p>Thank you for your payment. We will <br>
                        be in contact with more details shortly</p>
                    
                    <!-- Order ID Display -->
                    <div class="order-id-box">
                        <span class="label">Order ID</span>
                        <div class="value" id="order-id-display"><%= order%></div>
                    </div>
                    
                    <!-- Home Button -->
                    <a href="/" class="home-btn">
                        Go Home
                    </a>
                </div> 
            </div> 
        </div> 
  
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="message-box _success _failed" id="failed-message">
                    <i class="fa fa-times-circle" aria-hidden="true"></i>
                    <!-- Insert SVG Animation -->
                    <div class="animation-ctn">
                        <div class="icon icon--order-success svg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100px" height="100px">  
                                <g fill="none" stroke="#F44812" stroke-width="2"> 
                                    <circle cx="50" cy="50" r="45" style="stroke-dasharray:480px, 480px; stroke-dashoffset: 960px;"></circle>
                                    <circle id="colored" fill="#F44812" cx="50" cy="50" r="45" style="stroke-dasharray:480px, 480px; stroke-dashoffset: 960px;"></circle>
                                    <polyline class="st0" stroke="#fff" stroke-width="8" points="28,50 72,50" style="stroke-dasharray:100px, 100px; stroke-dashoffset: 200px;"/>   
                                </g> 
                            </svg>
                        </div>
                    </div>
                    <h2>Your payment failed</h2>
                    <p>Please try again later</p>
                    
                    <!-- Home Button for Failed Payment -->
                    <a href="/" class="home-btn failed-home-btn">
                        Return Home
                    </a>
                </div> 
            </div> 
        </div> 
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get URL parameters
            const urlParams = new URLSearchParams(window.location.search);
            const paymentStatus = urlParams.get('status');
            const orderId = urlParams.get('orderId');
            
            const successMessage = document.getElementById('success-message');
            const failedMessage = document.getElementById('failed-message');
            const orderIdDisplay = document.getElementById('order-id-display');
            
            // Set the order ID if available
            if (orderId) {
                orderIdDisplay.textContent = orderId;
            }
            
            // Show the appropriate message based on status
            if (paymentStatus === 'failed') {
                successMessage.style.display = 'none';
                failedMessage.style.display = 'block';
            } else {
                // Default to success or explicit success parameter
                successMessage.style.display = 'block';
                failedMessage.style.display = 'none';
            }
        });
    </script>
</body>
</html>